<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="Nội dung ở đây"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_read_internal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Đọc internal"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="@id/et_content"
        app:layout_constraintTop_toBottomOf="@id/et_content" />

    <Button
        android:id="@+id/btn_read_external"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đọc external"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_read_internal"
        app:layout_constraintEnd_toEndOf="@id/et_content"
        app:layout_constraintTop_toTopOf="@id/btn_read_internal" />

    <Button
        android:id="@+id/btn_write_internal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Ghi internal"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="@id/btn_read_internal"
        app:layout_constraintTop_toBottomOf="@id/btn_read_internal" />

    <Button
        android:id="@+id/btn_write_external"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ghi external"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_write_internal"
        app:layout_constraintEnd_toEndOf="@id/et_content"
        app:layout_constraintTop_toTopOf="@id/btn_write_internal" />

</androidx.constraintlayout.widget.ConstraintLayout>