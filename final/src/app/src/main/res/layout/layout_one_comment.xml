<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_avatar_cmt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:src="@drawable/account_circle_fill0_wght400_grad0_opsz24" />

    <LinearLayout
        android:id="@+id/ll_info_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_channel_name_cmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe" />

            <TextView
                android:id="@+id/tv_cmt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="1mo ago" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="THIS IS MY COMMENT"
            android:textSize="18sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_edit_cmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:src="@drawable/edit_fill0_wght400_grad0_opsz24" />

    <ImageView
        android:id="@+id/iv_delete_cmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/delete_fill0_wght400_grad0_opsz24" />

</LinearLayout>