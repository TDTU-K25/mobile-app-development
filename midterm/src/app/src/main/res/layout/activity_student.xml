<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Students"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_sort_criteria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Sort Criteria: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />


        <CheckBox
            android:id="@+id/cb_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            app:layout_constraintBottom_toBottomOf="@id/tv_sort_criteria"
            app:layout_constraintEnd_toStartOf="@id/cb_age"
            app:layout_constraintStart_toEndOf="@id/tv_sort_criteria"
            app:layout_constraintTop_toTopOf="@id/tv_sort_criteria" />

        <CheckBox
            android:id="@+id/cb_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="age"
            app:layout_constraintEnd_toStartOf="@id/cb_gpa"
            app:layout_constraintStart_toEndOf="@id/cb_name"
            app:layout_constraintTop_toTopOf="@id/cb_name" />

        <CheckBox
            android:id="@+id/cb_gpa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gpa"
            app:layout_constraintEnd_toStartOf="@id/btn_sort"
            app:layout_constraintStart_toEndOf="@id/cb_age"
            app:layout_constraintTop_toTopOf="@id/cb_age" />

        <Button
            android:id="@+id/btn_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Sort"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cb_gpa"
            app:layout_constraintTop_toTopOf="@id/cb_gpa" />

        <TextView
            android:id="@+id/tv_search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Search criteria: "
            app:layout_constraintStart_toStartOf="@id/tv_sort_criteria"
            app:layout_constraintTop_toBottomOf="@id/tv_sort_criteria" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Name"
            app:layout_constraintBottom_toBottomOf="@id/tv_search_title"
            app:layout_constraintEnd_toStartOf="@id/et_age"
            app:layout_constraintStart_toEndOf="@id/tv_search_title"
            app:layout_constraintTop_toTopOf="@id/tv_search_title" />

        <EditText
            android:id="@+id/et_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Age"
            app:layout_constraintBottom_toBottomOf="@id/tv_search_title"
            app:layout_constraintEnd_toStartOf="@id/et_gpa"
            app:layout_constraintStart_toEndOf="@id/et_name"
            app:layout_constraintTop_toTopOf="@id/tv_search_title" />

        <EditText
            android:id="@+id/et_gpa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="GPA"
            app:layout_constraintBottom_toBottomOf="@id/tv_search_title"
            app:layout_constraintEnd_toStartOf="@id/btn_search"
            app:layout_constraintStart_toEndOf="@id/et_age"
            app:layout_constraintTop_toTopOf="@id/tv_search_title" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Search"
            app:layout_constraintBottom_toBottomOf="@id/tv_search_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_search_title" />

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_search" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_students"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_reset" />

        <Button
            android:id="@+id/btn_import_students"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Import Students"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_students" />

        <Button
            android:id="@+id/btn_export_students"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Export Students"
            app:layout_constraintStart_toStartOf="@id/btn_import_students"
            app:layout_constraintTop_toBottomOf="@id/btn_import_students" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>