<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <TextView
        android:id="@+id/tv_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:text="Math"
        android:textColor="#6495ED"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_completion_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completion date: "
        app:layout_constraintStart_toStartOf="@id/tv_organization_title"
        app:layout_constraintTop_toBottomOf="@id/tv_organization_title" />

    <TextView
        android:id="@+id/tv_completion_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20/11/2023"
        app:layout_constraintStart_toEndOf="@id/tv_completion_date_title"
        app:layout_constraintTop_toTopOf="@id/tv_completion_date_title" />


    <TextView
        android:id="@+id/tv_organization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TDTU"
        app:layout_constraintStart_toEndOf="@id/tv_organization_title"
        app:layout_constraintTop_toTopOf="@id/tv_organization_title" />

    <TextView
        android:id="@+id/tv_organization_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Organization: "
        app:layout_constraintStart_toStartOf="@id/tv_subject"
        app:layout_constraintTop_toBottomOf="@id/tv_subject" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#c0c0c0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_completion_date_title" />

    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:src="@drawable/edit_fill0_wght400_grad0_opsz24"
        app:layout_constraintEnd_toStartOf="@id/iv_delete"
        app:layout_constraintTop_toTopOf="@id/iv_delete" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:src="@drawable/delete_fill0_wght400_grad0_opsz24"
        app:layout_constraintBottom_toBottomOf="@id/tv_completion_date_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_subject" />

</androidx.constraintlayout.widget.ConstraintLayout>